<h2>New Tweet!</h2>
<form class="tweet-compose" action="/tweets" method="POST">
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <label>
    Content
    <textarea name="tweet[content]"></textarea>
  </label>
  <br>

  <br>
  <script id="mention-template" type="text/template">
    <div id="mention-template-select">
      <select name="tweet[mentioned_user_ids][]">
        <option></option>
        <% User.all.each do |user| %>
        <option value="<%= user.id %>"><%= user.username %></option>
        <% end %>
      </select>
      <a href="#" class="remove-mentioned-user">Remove mention</a>
    </div>
  </script>
  <div class="mentioned-users">
    <a href="#" class="add-mentioned-user">Add mention</a>
  </div>
  <input type="Submit" value="Post Tweet!">
</form>
